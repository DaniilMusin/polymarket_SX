# Copy this file to .env and replace placeholders with your secrets

# ===== TELEGRAM ALERTS =====
TELEGRAM_TOKEN=<YOUR-TELEGRAM-TOKEN>
TELEGRAM_CHAT_ID=-1000000000000

# ===== ETHEREUM WALLET =====
# Your Ethereum private key (with or without 0x prefix)
# CRITICAL: Never commit the actual .env file with real keys!
PRIVATE_KEY=<YOUR-PRIVATE-KEY-HERE>

# ===== EXCHANGE API KEYS =====
# Polymarket CLOB API (optional for read-only operations)
POLYMARKET_API_KEY=<YOUR-POLYMARKET-API-KEY>
POLYMARKET_SECRET=<YOUR-POLYMARKET-SECRET>
POLYMARKET_PASSPHRASE=<YOUR-POLYMARKET-PASSPHRASE>

# SX Network API (optional, wallet signing is primary method)
SX_API_KEY=<YOUR-SX-API-KEY>

# Kalshi API
KALSHI_API_KEY=<YOUR-KALSHI-API-KEY>
KALSHI_API_SECRET=<YOUR-KALSHI-API-SECRET>

# ===== TRADING PARAMETERS =====
# Minimum profit in basis points (10 = 0.1%)
MIN_PROFIT_BPS=10

# Maximum position size in USD
MAX_POSITION_SIZE=1000

# Enable real trading (set to 'true' to enable, anything else = dry run)
ENABLE_REAL_TRADING=false
